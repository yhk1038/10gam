  footer .sns {
    float: none;
  }
}
footer .sns img {
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  width: 45px;
  height: 45px;
}
footer .terms {
  font-size: 15px;
  border-color: transparent;
}
@media (max-width: 767px) {
  footer .terms {
    font-size: 13px;
  }
}
footer .terms a {
  color: #fff;
  padding-right: 8px;
}
footer .copyright {
  margin-top: 20px;
  font-size: 12px;
}
@media (max-width: 767px) {
  footer .copyright {
    margin-top: 15px;
    font-size: 0.9em;
  }
}

.dropdown-menu {
  left:-1px;
  background:rgba(243,243,243,0.8);
  border-radius:0;
}
</style>

<body>

