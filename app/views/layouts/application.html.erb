      if (response.status === 'connected') {
          $('#logout').click(function() {
              // alert("logout?");
              FB.logout(function() {
                  $.ajax({
                      method: 'get',
                      url: '/home/logout'
                  })
                  .done(function(after_logout){
                      FB.logout();
                      console.log(after_logout);
                      //alert("logout");
                      window.location.reload();
                  });
              })
          });
          FB.api('/me', function(info) {
            console.log(info);
            $('#profile-name').text(info.name);
            $('#profile-picture').attr('src', 'https://graph.facebook.com/' + info.id + '/picture?type=square');
          })
      } else {
          $('#login').click(function() {
              FB.login(function() {
                  $.ajax({
                      method: 'get',
                      url: '/home/login'
                  })
                  .done(function(after_login){
                    console.log(after_login);
                    // alert("done");
                    window.location.reload();
                  });
              },{scope: 'email'});
          });
      }
    });
    // FB.AppEvents.logPageView();
  };
  (function(d, s, id){
